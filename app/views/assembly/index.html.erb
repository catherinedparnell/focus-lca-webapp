<head>
  <link rel="stylesheet" href="../../stylesheets/assembly.scss">
</head>

<section
ng-controller="assemblyController"
ng-app="assembly">

  <div class="simpleDemo row">
    <ul class="collapsible" data-collapsible="expandable">
        <li ng-repeat="(listName, list) in models.lists">
          <h3 class="collapsible-header">List {{listName}}</h3>
          <ul class="collapsible-body" dnd-list="list">
            <li ng-repeat="item in list"
                dnd-draggable="item"
                dnd-moved="list.splice($index, 1)"
                dnd-effect-allowed="move"
                dnd-selected="models.selected = item"
                ng-class="{'selected': models.selected === item}"
            >
              {{item.label}}
            </li>
          </ul>
        </li>
    </ul>
  </div>

</section>
<%= javascript_include_tag "assembly/application" %>